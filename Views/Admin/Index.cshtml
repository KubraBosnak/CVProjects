@using CvProject.Models.Entity
@model List<TblAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Admin İşlemleri</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KULLANICI ADI</th>
        <th>ŞİFRE</th>
        <th>DÜZENLE</th>
        <th>SİL</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KullaniciAdi</td>
            <td>@item.Sifre</td>
            <td><a href="/Admin/AdminDuzenle/@item.ID" class="btn btn-warning">DÜZENLE</a></td>
            <td><a href="/Admin/AdminSil/@item.ID" class="btn btn-danger">SİL</a></td>

        </tr>
    }
</table>
<a href="/Admin/AdminEkle" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
